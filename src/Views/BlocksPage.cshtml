@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;
}

<html>
    <head>
        <title>Sir Trevor for Umbraco</title>
        <style type="text/css">
            body {
                font-family:'Segoe UI', 'Arial Narrow', 'Nimbus Sans L', sans-serif;
                margin:50px;
            }

            h1,h2,h3,h4,h5,h6{
                font-weight:normal;
            }

            .stdemo-block {
                border: 2px solid #f57020;
                border-left-width: 25px;
                margin: 25px 0;
                padding: 25px;
            }

            .stdemo-datasection {
                border-bottom: 2px solid #f57020;
                margin-bottom: 25px;
            }
        </style>
    </head>
    <body>
        <div style="margin-top:100px;margin-bottom:50px;padding-bottom:25px;border-bottom:2px solid silver;text-align:right;">
            <a href="https://github.com/mindrevolution/SirTrevor-for-Umbraco" target="_blank"><img src="/App_Plugins/SirTrevor/GettingStarted.res/logo-mr-handmade.png" alt="mindrevolution" /></a>
        </div>

        <img alt="" src="data:image/gif;base64," />

        <h1>Sir Trevor for Umbraco</h1>
        <h2>Sample Template - how to render the editor data to the frontend</h2>
        <hr />
        <h3>You can also use partials for the blocks for a more separated approach.</h3>
	
@{
    foreach (dynamic block in CurrentPage.blocks.data)
    {
        <div class="stdemo-block">
            <div class="stdemo-datasection">
                <h3>@block.type</h3>
                <pre cols="120" rows="8">@block.data</pre>
            </div>

            @switch((string)block.type)
            {
                case "umbraco_image":
                    var image = Umbraco.Media((int)block.data.id);
                    <img src="@image.Url" alt="@image.name" style="max-width:50%;" />
                    break;

                case "heading":
                    string heading = block.data.text;
                    string tag = (block.data.type==null) ? "h1" : block.data.type;
                    string formattedHeading = SirTrevor.Markdown(heading).ToString().Replace("p", tag);
                    @Html.Raw(formattedHeading)
                    break;

                case "text":
                case "list":
                case "ordered_list":
                    string text = block.data.text;
                    @SirTrevor.Markdown(text)
                    break;
                    
                default:
                    <text>(no rendering template)</text>
                    break;
            }
        </div>
    }
}
    </body>
</html>